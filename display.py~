def create_ppm_file(width, height, color):
    ppm_file = open("example.ppm", "w")
    ppm_file.write("P3\n{} {}\n255\n".format(width, height))
    for i in range(height):
        row = ""
        for j in range(width):
            row += "{} {} {} ".format(color[0], color[1], color[2])
        ppm_file.write(row + "\n")
    ppm_file.close()

# Example usage
create_ppm_file(200, 100, (255, 0, 0))

